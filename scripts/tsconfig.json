{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "declarationDir": "../www",
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "stripInternal": true,
    "importHelpers": true,
    "lib": [
      "es5",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
